{
    "$schema": "https://json.schemastore.org/prettierrc",
    "arrowParens": "always",
    "plugins": ["prettier-plugin-pkg"],
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "overrides": [
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.{md,mdx}",
            "options": {
                "tabWidth": 2,
                "endOfLine": "auto",
                "proseWrap": "always",
                "embeddedLanguageFormatting": "auto",
                "printWidth": 80
            }
        }
    ]
}
